maxposts=15
TMPDIR=tmp
CFGDIR=cfg
LIVESITE=n1.ctrlc.hu:/home/stef/public/blog

# END OF CONFIG OPTIONS

allposts:=$(shell ls -t posts/*.html )
newestposts:=$(shell ls -t posts/*.html | head -$(maxposts) )

# if you don't have static content, remove it as a target
all: posts archive atom sitemap static tags

atom: $(TMPDIR)/atom.xml

sitemap: $(TMPDIR)/sitemap.xml.gz

static: layout/static/*
	ksh bin/static $^

Makefile: $(allposts)
	zsh bin/makemake >>$@

clean:
	rm $(TMPDIR)/*.(html|xml|gz|css)
	rm -rf $(TMPDIR)/posts $(TMPDIR)/tags

make:
	rm Makefile
	make -f Makefile.in Makefile

install: all
	rsync -vcaE -e ssh --delete $(TMPDIR)/* $(LIVESITE)

$(TMPDIR)/sitemap.xml.gz: posts archive
   ksh bin/sitemap $(allposts) | gzip -c >tmp/sitemap.xml.gz

.PHONY: all static make install clean atom sitemap

