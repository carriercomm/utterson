. ${0%%/*}/utterson.cfg
. ${0%%/*}/utterson.lib

postslen=${#@}
HTMLFILE="index.html"

# write out headers
runtpl xhtml header

# process posts
for entry; do
    tvarinit
    runtpl xhtml item
done

# link to older archives
TVARS[POSTURL]="index.html"
TVARS[NEWERPOSTS]=""
TVARS[OLDERPOSTS]="<div class=\"older\"><a href=\"page-1.html\">prev posts</a></div>"
runtpl xhtml footer

return 0
