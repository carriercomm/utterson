#!/usr/bin/ksh

. ${0%%/*}/utterson.cfg
. ${0%%/*}/utterson.lib

postslen=${#@}

# get timestamp of very last post for rss
TVARS[LASTUPDATED]="$(getRFCtime "${1}")"

#### MAIN LOOP STARTS HERE ####

runtpl atom header
# process posts
for entry; do
    tvarinit
    runtpl atom item
done

runtpl atom footer
