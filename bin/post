#!/usr/bin/ksh

. ${0%%/*}/utterson.cfg
. ${0%%/*}/utterson.lib

entry=$1
tvarinit

# calculate permalink end-point
TVARS[NEWERPOSTS]=""
TVARS[OLDERPOSTS]=""
[[ -n $2 ]] &&
    TVARS[NEWERPOSTS]="<div class=\"newer\"><a href=\"$BASEURL/$2\">next posts</a></div>"
[[ -n $3 ]] &&
    TVARS[OLDERPOSTS]="<div class=\"older\"><a href=\"$BASEURL/$3\">prev post</a></div>"
runtpl xhtml post
